<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.Login">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_thumbs_up"/>

    <TextView
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="تم إنشاء حسابك بنجاح" />

    <TextView
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/location"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_placeholder"
        android:drawablePadding="4dp"
        android:text="يرجي تحديد موقعك الذي تريد ربط الحساب به" />


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <Button
        android:drawablePadding="4dp"
        android:id="@+id/MarkLocation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:background="@drawable/btnedit"
        android:text="تحديد موقع أخر"
        android:textAlignment="center"
        android:textSize="16sp" />

        <Button
            android:id="@+id/MarkMyLocation"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/btnedit"
            android:drawablePadding="4dp"
            android:text="حدد موقعك الحالي"
            android:textAlignment="center"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Ask"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textColor="#000C51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="لماذا يريد التطبيق الحصول علي موقعي ؟" />

</LinearLayout>