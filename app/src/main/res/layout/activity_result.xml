<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Wait_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/Result_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/res_covid" />

    <TextView
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7A7A7A"
        android:text="نسبة الإشتباه في إصابتك بفيروس كورونا"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:text="مرتفعة جدا !" />


    <LinearLayout
        android:id="@+id/No_Covid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إذا شعرت بأي تغير ف الأعراض يمكنك بدء كشف جديد في أي وقت"
            android:textAlignment="center"
            android:textColor="#000C51"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Ok"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/btnedit"
            android:drawablePadding="4dp"
            android:text="حسنا"
            android:textAlignment="center"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Covid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حفاظا علي سلامتك هل تريد بدء المتابعة اليومية مع التطبيق ؟"
            android:textAlignment="center"
            android:textColor="#000C51"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/No"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:background="@drawable/btnedit"
                android:drawablePadding="4dp"
                android:text="لا شكرا"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/start"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/btnedit"
                android:drawablePadding="4dp"
                android:text="أبدا المتابعة"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_pdf__2_"
        android:drawablePadding="8dp"
        android:text="تحميل التقرير الخاص بك "
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="20sp" />

    </LinearLayout>