<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activities.Login">

    <ImageView
        android:layout_marginTop="120dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_covid_test__5_"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="هل تريد بدء الكشف من خلال إخبارنا ب الأعراض التي تشعر بها"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:layout_marginTop="22dp"
        android:id="@+id/Continue"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_yes"
        android:text="أبدا الكشف"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ليس الأن"
        android:textAlignment="center"
        android:textColor="#000C51"
        android:textSize="17sp" />


</LinearLayout>