<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    app:cardElevation="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="28dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/place_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_doctor__2_"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:padding="8dp"
            android:layoutDirection="rtl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/med1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="د. كريم محمد "
                    android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vicinity"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vicinity_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="إستشاري أمراض الصدر" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/Repeat_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="الحالة"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    tools:text="غير متاح الان"
                    android:textColor="@color/red" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التقييم"
                    android:textColor="@color/red"
                   />

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="22dp"
                    android:rating="5"
                    android:src="@drawable/ic_star__1_" />
                <ImageView
                    android:id="@+id/star_2"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star__1_"
                    android:layout_marginRight="4dp"
                    android:layout_width="20dp"
                    android:rating="5"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/star_3"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star__1_"
                    android:layout_marginRight="2dp"
                    android:layout_width="20dp"
                    android:rating="5"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/star_4"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star__1_"
                    android:layout_marginRight="4dp"
                    android:layout_width="20dp"
                    android:rating="5"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/star_5"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star__1_"
                    android:layout_marginRight="4dp"
                    android:layout_width="20dp"
                    android:rating="5"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>